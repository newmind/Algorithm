  "version": "0.2.0",
  "configurations": [{
      "type": "java",
      "name": "Java (Launch) - Current File",
      "request": "launch",
      "mainClass": "${file}",
      "stopOnEntry": true,
      "console": "integratedTerminal"
    },
    {
      "name": "(Mac cppdbg) C++ current file (Console input)",
      "type": "cppdbg",
      "request": "launch",
      "preLaunchTask": "build (Mac)",
      "internalConsoleOptions": "openOnSessionStart",
      "logging": {
        "moduleLoad": false,
        "programOutput": true,
        "trace": false
      },
      "program": "${fileDirname}/${fileBasenameNoExtension}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": true,
      "MIMode": "lldb"
    },
    {
      "name": "(Mac lldb) C++ current file (debugger)",
      "type": "lldb",
      "request": "launch",
      "preLaunchTask": "build (Mac)",
      "internalConsoleOptions": "openOnSessionStart",
      "logging": {
        "moduleLoad": false,
        "programOutput": true,
        "trace": false
      },
      "program": "${fileDirname}/${fileBasenameNoExtension}",
      "args": [],
      "stopAtEntry": false,
      "cwd": "${fileDirname}",
      "environment": [],
      "externalConsole": false,
      "MIMode": "lldb"
    },
    {
      "name": "Python: Current File",
      "type": "python",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    }
  ]
}